<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="webfactory.wfd_meta.provider" class="Webfactory\Bundle\WfdMetaBundle\Provider">
            <argument type="service" id="database_connection"/>
        </service>

        <service id="webfactory.wfd_meta.caching.event_listener" class="Webfactory\Bundle\WfdMetaBundle\Caching\EventListener">
            <argument type="service" id="annotation_reader"/>
            <argument type="service" id="webfactory.wfd_meta.provider"/>
            <argument>%kernel.debug%</argument>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse"/>
        </service>
    </services>
</container>
