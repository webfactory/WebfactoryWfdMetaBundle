<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="webfactory.wfd_meta.refreshing_router" class="Webfactory\Bundle\WfdMetaBundle\Routing\RefreshingRouter" public="false" parent="router.default">
            <call method="setWfdMetaProvider">
                <argument type="service" id="webfactory.wfd_meta.provider"/>
            </call>
            <call method="setLogger">
                <argument type="service">
                    <service parent="monolog.logger_prototype">
                        <argument index="0">wfd_meta_bundle.refreshing_router</argument>
                    </service>
                </argument>
            </call>
        </service>
    </services>
</container>
